<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/Content/font-awesome/css/font-awesome.min.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
   
    <meta property="og:title" content="#cityzen" /> 
    <meta property="og:description" content="CityZen - a place where you can announce authorities about problems in your city." />
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("CityZen", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                <a href="/Home/Index"  class="navbar-left"><img src="~/Content/images/CITYZEN3.png" id="logo_text"></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Recent", "Recent", "Post")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("All Posts","AllPosts","Post")</li>
                        <li>@Html.ActionLink("My Posts", "MyPosts","Post")</li>
                        <li>@Html.ActionLink("Add Post", "AddPost","Post")</li>
                        @*<li>@Html</li>*@
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("Authority"))
                    {
                        <li>@Html.ActionLink("Reports", "MostFollowedReports", "Reports")</li>
                    }
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="spinner">
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        
    </div>
    
    <footer class="footer">
        <p>&copy; CityZen - Trying to make the world a better place since @DateTime.Now.Year -</p>
    </footer>
   
    @RenderSection("scripts", required: false)
</body>
</html>
